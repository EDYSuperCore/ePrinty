{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "ePrinty",
    "version": "1.4.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "execute": true,
        "sidecar": false,
        "open": true
      },
    "window": {
        "minimize": true,
        "startDragging": true,
        "close": true
      },
      "http": {
        "all": false,
        "request": true,
        "scope": ["http://**", "https://**"]
      }
    },
    "bundle": {
      "active": true,
      "targets": ["app"],
      "identifier": "com.easyprinter.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "scripts/ricoh320.pdd"
      ],
      "copyright": "",
      "category": "Utility",
      "shortDescription": "ePrinty - 让打印这件事，简单一点",
      "longDescription": "用于企业内网打印机的安装与管理"
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "decorations": false,
        "title": "ePrinty - 让打印这件事，简单一点",
        "width": 900,
        "height": 700,
        "minWidth": 800,
        "minHeight": 600,
        "minimizable": true,
        "closable": true
      }
    ]
  }
}

